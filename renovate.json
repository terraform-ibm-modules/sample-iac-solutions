{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["github>terraform-ibm-modules/common-dev-assets:commonRenovateConfig"],
  "packageRules": [
    {
      "description": "Allow the locked in provider version to be updated to the latest",
      "enabled": true,
      "matchFileNames": ["containerized_app_landing_zone/version.tf"],
      "matchManagers": ["terraform"],
      "matchDepTypes": ["required_provider"],
      "rangeStrategy": "bump",
      "semanticCommitType": "fix"
    }
  ]
}
